# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override for python
[*.py]
indent_style = space
indent_size = 4

# Override for markdown
[*.{md}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Override for JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Override for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
